{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "outDir": "dist",
        "strict": false,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "checkJs": false,
        "allowJs": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "jsx": "react-jsx",
        "types": ["node", "jest"],
        "lib": ["es6"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noErrorTruncation": true,
        "allowUnreachableCode": true,
        "useUnknownInCatchVariables": false,
        "inlineSources": true,
        "sourceRoot": "/",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.js"],
    "exclude": ["node_modules", "dist", "<node_internals>/**"],
    "ts-node": {
        "files": true
    }
}
