{
    "name": "sponsorcx-backend-mini",
    "version": "1.0.0",
    "description": "SponsorCX Mini GraphQL API",
    "main": "dist/server.js",
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "exec": "NODE_ENV=development TZ=utc node -r @swc-node/register ./server.ts --verbose",
        "ext": "ts, js"
    },
    "scripts": {
        "build": "tsc",
        "start": "nodemon",
        "start:prod": "tsc && cross-env NODE_ENV=production node dist/server.js",
        "migrate": "ts-node src/db/migrate.ts",
        "codegen": "graphql-codegen --config codegen.ts",
        "test": "jest --no-cache --detectOpenHandles --forceExit",
        "lint": "tsc --noEmit && eslint --ignore-path .gitignore --ext .js,.ts .",
        "lint:quiet": "tsc --noEmit && eslint --ignore-path .gitignore --ext .js,.ts . --quiet"
    },
    "author": "SponsorCX Team",
    "dependencies": {
        "axios": "^1.6.0",
        "body-parser": "^1.19.2",
        "cors": "^2.8.4",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "express": "^4.17.3",
        "express-graphql": "^0.12.0",
        "graphql": "^16.8.1",
        "graphql-playground-middleware-express": "^1.7.22",
        "graphql-server-express": "^1.0.0",
        "graphql-subscriptions": "^1.2.1",
        "graphql-type-json": "^0.3.2",
        "lodash": "4.17.21",
        "pg": "^8.11.3",
        "snowflake-sdk": "^1.9.3",
        "zod": "^3.20.2"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^6.0.1",
        "@graphql-codegen/typescript": "^5.0.2",
        "@graphql-codegen/typescript-resolvers": "^5.1.0",
        "@swc-node/register": "^1.6.2",
        "@swc/core": "^1.3.41",
        "@types/body-parser": "^1.19.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/graphql": "0.10.2",
        "@types/jest": "^30.0.0",
        "@types/lodash": "^4.14.191",
        "@types/node": "^16.11.7",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "eslint": "^8.43.0",
        "eslint-config-prettier": "^8.8.0",
        "jest": "^30.0.4",
        "nodemon": "^2.0.17",
        "prettier": "2.8.2",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.1",
        "typescript": "4.9.4"
    }
}
